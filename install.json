{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "widgets": {
        "title": "Widgets",
        "order": 3,
        "type": "array",
        "default": [
          {
            "artist": {
              "URI": ""
            },
            "location": {
              "method": "prepend",
              "selector": "body"
            },
            "playlist": {
              "URI": "custom",
              "customURI": "spotify:user:erebore:playlist:788MOXyTfcUb1tdw4oC7KJ",
              "view": "list"
            },
            "position": "center",
            "size": "large",
            "theme": "dark",
            "track": {
              "URI": ""
            },
            "type": "playlist"
          }
        ],
        "items": {
          "notitle": true,
          "type": "object",
          "properties": {
            "type": {
              "order": 0,
              "type": "string",
              "title": "What kind of widget should be displayed?",
              "format": "radios",
              "default": "playlist",
              "enum": [
                "playlist",
                "track",
                "artist"
              ],
              "enumNames": {
                "playlist": "A playlist.",
                "track": "A single track.",
                "artist": "A follow button. "
              }
            },

            "playlist": {
              "order": 2,
              "type": "object",
              "title": "Playlist",
              "showIf": {
                "widgets[].type": "playlist"
              },
              "properties": {
                "URI": {
                  "order": 0,
                  "title": "Playlist Source",
                  "type": "string",
                  "default": "custom",
                  "enum": [
                    "custom",
                  ],
                  "enumNames": {
                    "custom": "Choose a custom playlist from a URI...",
                  }
                },

                "customURI": {
                  "order": 1,
                  "showIf": {
                    "widgets[].playlist.URI": "custom"
                  },
                  "title": "Playlist URI",
                  "type": "string",
                  "description": "This can be found in Spotify by right clicking a playlist and selecting “Copy Spotify URI”.",
                  "placeholder": "spotify:user:jessie:playlist:123ABC..."
                },

                "view": {
                  "order": 2,
                  "type": "string",
                  "title": "How should songs appear?",
                  "format": "radios",
                  "default": "list",
                  "enum": [
                    "list",
                    "coverart"
                  ],
                  "enumNames": {
                    "list": "As a list of tracks.",
                    "coverart": "With their cover art."
                  }
                }
              }
            },

            "track": {
              "order": 2,
              "type": "object",
              "title": "Track",
              "showIf": {
                "widgets[].type": "track"
              },
              "properties": {
                "URI": {
                  "order": 0,
                  "title": "Track URI",
                  "type": "string",
                  "description": "This can be found in Spotify by right clicking a track and selecting “Copy Spotify URI”.",
                  "placeholder": "spotify:user:jessie:track:123ABC..."
                }
              }
            },

            "artist": {
              "order": 2,
              "type": "object",
              "title": "Follow Button",
              "showIf": {
                "widgets[].type": "artist"
              },
              "properties": {
                "URI": {
                  "order": 0,
                  "title": "Artist URI",
                  "type": "string",
                  "description": "This can be found in Spotify by right clicking an artist and selecting “Copy Spotify URI”.",
                  "placeholder": "spotify:artist:123ABC..."
                }
              }
            },

            "location": {
              "title": "Location",
              "description": "Where should the widget appear on the page?",
              "order": 3,
              "type": "object",
              "format": "element",
              "default": {
                "selector": "body",
                "method": "prepend"
              }
            },

            "position": {
              "order": 4,
              "title": "Horizontal alignment",
              "description": "How should the widget sit in the page?",
              "type": "string",
              "default": "center",
              "format": "radios",
              "enum": [
                "left",
                "center",
                "right"
              ],
              "enumNames": {
                "left": "Left",
                "center": "Center",
                "right": "Right"
              }
            },

            "size": {
              "order": 5,
              "type": "string",
              "title": "Size",
              "description": "What size should the widget appear as?",
              "format": "radios",
              "default": "large",
              "enum": [
                "small",
                "large"
              ],
              "enumNames": {
                "large": "Large",
                "small": "Small"
              }
            },

            "theme": {
              "order": 6,
              "type": "string",
              "title": "Theme",
              "description": "What color scheme should the widget use?",
              "format": "radios",
              "default": "dark",
              "enum": [
                "light",
                "dark"
              ],
              "enumNames": {
                "light": "Light",
                "dark": "Dark"
              }
            }
          }
        }
      }
    }
  }
}
